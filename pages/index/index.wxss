/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;      /*高宽大小根据个人情况自己调试*/
  height: 100%;
  background-repeat:no-repeat; /** 不重复*/
  background-size:contain;
} 
.line{
  display: flex;
  flex-direction: row;
  height: 5rem;
  width: 70%;
  margin-top: auto;
}

.button1{
  display: flex;
  align-items: center;
  background-size:100%;
  justify-content: center;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 30px;
  margin-left: auto;
  margin-right: auto;
  font-size: 40px;
}

.user-motto{
  color:bisque;
}