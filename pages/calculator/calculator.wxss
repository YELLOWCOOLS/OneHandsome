/* pages/calculator/calculator.wxss */
.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgb(0, 0, 0);
  font-family: "Microsoft YaHei";
  overflow-x: hidden;
}

page{height:100%}
.xianshi {
  text-align: right;
  width: 100%;
  line-height: 300rpx;
  padding: 0 10rpx;
  font-weight: normal;
  font-size: 70px;
  box-sizing: border-box;
  border-top: 0px solid #fff;
  color: #fff;
}
.anniu {
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  height: 7rem;
  background-color: rgb(0, 0, 0);
}
.item {
  width:25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  margin: 3px;
  border-radius: 90%;
}
.item:active {
  background-color: #ff3300;
}

.orange {
  color: #fef4e9;
  background: #ff8800;
  font-weight: bold;
}
.blue {
  color:#d9eef7;
  background-color: #5a5858;
}

.remain{
  
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  height: 10px;
  background-color: rgb(0, 0, 0);
}